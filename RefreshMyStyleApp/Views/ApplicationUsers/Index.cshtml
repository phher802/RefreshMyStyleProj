<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnSave").on('click', function () {
            var Datas=JSON.stringify($('form').serialize());
