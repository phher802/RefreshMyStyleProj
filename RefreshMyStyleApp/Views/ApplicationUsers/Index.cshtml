<h1> @Model.ApplicationUser.FullName</h1>
<p>
    <img src="~/images/profileImages/@Model.ApplicationUser.ProfileImageName" />

</p>


<div class="container-fluid">
    <div class="row">
        <div>
            @foreach (var item in Model.Images)
            {
                <div class="card-deck">
                    <div class="card h-100" style="width: 15rem; height: 10rem; display: flex">
                        <img src="~/images/items/@item.ImageTitle" class="card-img-top img-fluid" alt="@item.ImageName" />

                        <div class="card-body">
                            <h5 class="card-title">@item.ImageName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.ClothingCategory</h6>
                            <p class="card-text"> @item.Description</p>
                            <p class="card-text">Color: @item.Color</p>
                            <p class="card-text">Size: @item.Size</p>
                            <p class="card-text">Status: @item.ItemStatus</p>
                            <form asp-action="LikeImage" asp-controller="ApplicationUsers" asp-route-ImageId="@item.Id" class="text-right align-text-top">
                                <input type="hidden" asp-for="@item.Id" name="imageId" value="" />
                                <input type="hidden" asp-for="@item.IsLiked" value="" />
                                <input type="hidden" asp-for="@item.ApplicationUserId" name="name" value="" />

                            </form>
                            <a asp-action="LikeImage" asp-controller="ApplicationUsers" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-default btn-sm" style="background-color: #808080">
                                    Like
                                </button>
                            </a>
                            <a href="#" class="card-link">Another link</a>
                        </div>
                    </div>
                </div>

            }

        </div>

    </div>
</div>

