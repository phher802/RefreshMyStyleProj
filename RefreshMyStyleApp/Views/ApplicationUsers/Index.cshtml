@model RefreshMyStyleApp.ViewModels.ApplicationUserImageViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> @Model.ApplicationUser.FullName</h1>
<p>
    <img src="~/images/profileImages/@Model.ApplicationUser.ProfileImageName" />

</p>


<div class="container-fluid">
    <div class="row">
        <div>
            @using (Html.BeginForm("Index", "ApplicationUsers", FormMethod.Get))
            {
                @*<form asp-action="SearchUser" asp-controller="ApplicationUser">*@
                @*<input type="hidden" asp-for="" />*@
                <input type="hidden" asp-for="ApplicationUser.Id" />
                <div class="form-group">
                    <label asp-for="ApplicationUser.SearchUsers" class="control-label"></label>
                    <input name="searchString" type="text" class="form-control" />
                    <input type="submit" value="Filter" class="btn btn-primary" />
                    <span asp-validation-for="ApplicationUser.SearchUsers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                @*</form>*@

            }

            @if (Model.SearchUsers.Any())
            {
                @foreach (var user in Model.SearchUsers)
                {

                    <div class="col-sm">
                        <div class="list-group">
                            <input type="hidden" asp-for="ApplicationUser.Id" />
                            <dl class="row">
                                @*<div>
                                    <img src="~/images/profileImages/@Model.ProfileImageName" />
                                    </div>*@
                                <dt class="col-sm-2">
                                    @Html.DisplayFor(model => model.ApplicationUser.FName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayNameFor(model => model.ApplicationUser.FName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ApplicationUser.LName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ApplicationUser.LName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ApplicationUser.FullName)
                                </dd>
                                <dt class="col-sm-2" style="display: none">
                                    @Html.DisplayNameFor(model => model.ApplicationUser.IdentityUser)
                                </dt>
                                <dd class="col-sm-10" style="display: none">
                                    @Html.DisplayFor(model => model.ApplicationUser.IdentityUser.Id)
                                </dd>
                            </dl>
                            <a href="#" class="list-group-item list-group-item-action"></a>
                        </div>
                    </div>
             }   }
        </div>
        <div>
            @if (Model.Images != null)
            {
                @foreach (var item in Model.Images)
                {

                    <div class="col-md">

                        <div class="card h-100" style="width: 15rem; display: flex">

                            <img src="~/images/items/@item.ImageTitle" class="card-img-top img-fluid img-thumbnail" alt="@item.ImageName">

                            <div class="card-body">
                                <h5 class="card-title">@item.ImageName</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@item.ClothingCategory</h6>
                                <p class="card-text"> @item.Description</p>
                                <p class="card-text">Color: @item.Color</p>
                                <p class="card-text">Size: @item.Size</p>
                                <p class="card-text">
                                    Status: @item.ItemStatus
                                </p>
                                <a href="#" class="card-link">Card link</a>
                                <a href="#" class="card-link">Another link</a>
                            </div>

                        </div>
                    </div>

                }
            }
        </div>
    </div>
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model.ApplicationUser.Id">Edit</a> |
    <a asp-action="UploadProfileFiles" asp-controller="ApplicationUsers" asp-route-id="@Model.ApplicationUser.Id">Upload Profile Image</a> |
    <a asp-action="PostNewImage" asp-controller="Images" asp-route-id="@Model.ApplicationUser.Id">Upload pictures</a>
    <a asp-action="Details" asp-controller="ApplicationUsers" asp-route-id="@Model.ApplicationUser.Id">Details</a>
