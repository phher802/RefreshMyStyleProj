@model RefreshMyStyleApp.ViewModels.ApplicationUserImageViewModel

@{
    ViewData["Title"] = "GetClaims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Claims</h1>

<p>
    <a asp-action="Index" asp-controller="ApplicationUsers">Return to Profile</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(m => m.Like.DateLiked)*@
                Date
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Image)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.AppUserNotLoggedIn.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>

                <td>
                    @claim.DateClaimed
                </td>
                <td>
                    <p>
                        <img src="~/images/items/@claim.ImageTitle" height="100" width="50" />
                    </p>
                </td>

                <td>
                    @claim.ClaimImageOwnerFullName
                </td>
                <td>

                    <a asp-action="Details" asp-route-id="@claim.UserId">Details</a> |
                    <a asp-action="DeleteClaimedImage" asp-controller="ApplicationUsers" asp-route-id="@claim.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
