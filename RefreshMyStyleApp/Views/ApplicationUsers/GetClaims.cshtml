@model RefreshMyStyleApp.ViewModels.ApplicationUserImageViewModel

@{
    ViewData["Title"] = "GetClaims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light nav-hover">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item" style="color: white">
                    <a class="nav-link" style="color: white" asp-action="Index">
                        Home
                    </a>
                </li>
                <li class="nav-item" style="color: white">
                    <a class="nav-link" style="color: white" asp-action="SearchUsers" asp-controller="ApplicationUsers">
                        Search Users
                    </a>
                </li>

            </ul>
        </div>
    </div>

</nav>
<div class="container1">
    <h1 style="text-align: center">My Claims</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayNameFor(m => m.Like.DateLiked)*@
                    Date
                </th>
                <th>
                    Clothing Item
                </th>
                <th>
                    Owner's Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>

                    <td>
                        @claim.DateClaimed
                    </td>
                    <td>
                        <p>
                            <img src="~/images/items/@claim.ImageFilePath" height="100" width="50" />
                        </p>
                    </td>

                    <td>
                        @claim.ClaimImageOwnerFullName
                    </td>
                    <td>
                        <p>
                            <a asp-action="Details" asp-route-id="@claim.ClaimedImageOwnerId">
                                <button type="button" class="btn btn-outline-warning btn-event">
                                    Details
                                </button>
                            </a>
                        </p>

                        <p>
                            <a asp-action="DeleteClaimedImage" asp-controller="ApplicationUsers" asp-route-id="@claim.Id">
                                <button type="button" class="btn btn-outline-warning btn-event">
                                    Delete
                                </button>
                            </a>
                        </p>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>