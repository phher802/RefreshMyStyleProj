@model RefreshMyStyleApp.ViewModels.ApplicationUserImageViewModel

@{
    ViewData["Title"] = "GetClaims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align: center">My Claims</h1>

<p>
    <a asp-action="Index" asp-controller="ApplicationUsers">
        <button type="button" class="btn btn-outline-warning btn-event">
            Return to Profile
        </button>
    </a>
</p>
<p>
    <a asp-action="SearchUsers" asp-controller="ApplicationUsers">
        <button type="button" class="btn btn-outline-warning btn-event">
            Search Users
        </button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(m => m.Like.DateLiked)*@
                Date
            </th>
            <th>
                Clothing Item
            </th>
            <th>
                Claimed by
            </th>
            <th>
                Send A Message
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>

                <td>
                    @claim.DateClaimed
                </td>
                <td>
                    <p>
                        <img src="~/images/items/@claim.ImageTitle" height="100" width="50" />
                    </p>
                </td>

                <td>
                    @claim.UserId
                </td>
                <td>
                    <p>
                        <a asp-action="Details" asp-route-id="@claim.UserId">
                            <button type="button" class="btn btn-outline-warning btn-event">
                                Details
                            </button>
                        </a>
                    </p>
                    <p>
                        <a asp-action="ConfirmClaim" asp-controller="ApplicationUsers" asp-route-id="@claim.Id">
                            <button type="button" class="btn btn-outline-warning btn-event">
                                Message
                            </button>
                        </a>
                    </p>

                </td>
            </tr>
        }
    </tbody>
</table>
