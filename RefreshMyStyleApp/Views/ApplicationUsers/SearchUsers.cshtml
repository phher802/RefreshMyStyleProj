@model RefreshMyStyleApp.Models.ApplicationUser

@{
    ViewData["Title"] = "SearchUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light nav-hover">
     <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavDropdown" >
            <span class="navbar-toggler-icon"></span>
        </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" style="color: white">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" style="color: white" asp-action="SearchUsers" asp-controller="ApplicationUsers">
                    Search Users
                </a>
            </li>
        </ul>
  
        <div>
            <form class="d-flex" asp-action="SearchUsers" asp-controller="ApplicationUsers">
                <input name="searchString" type="text" class="form-control" />
                <button class="btn btn-outline-warning btn-event" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
<div >
    <h1 style="text-align:center; padding-top: 1rem; padding-bottom: 1rem">Meet Other Clothing Enthusiasts!</h1>
    <div class="container-fluid">     
        <table class="table" style="text-align: center">
            <thead>
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.FullName)*@
                        Name
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.LName)
                    </th>*@
                    <th>
                        @*@Html.DisplayNameFor(model => model.ProfileImageName)*@
                    </th>
                    <th>
                        Go to User Profile
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SearchResults)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.LName)
                        </td>*@

                        <td>
                            <p>
                                <img src="~/images/profileImages/@item.ProfileImageName" height="80" width="70" class="mr-3 rounded-circle img-thumbnail shadow-sm" />
                            </p>
                        </td>

                        <td>

                            <p>
                                <a asp-action="Details" asp-controller="ApplicationUsers" asp-route-id="@item.Id">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Details
                                    </button>
                                </a>
                            </p>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

