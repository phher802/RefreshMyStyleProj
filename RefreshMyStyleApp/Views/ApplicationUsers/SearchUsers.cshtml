@model RefreshMyStyleApp.Models.ApplicationUser

@{
    ViewData["Title"] = "SearchUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light nav-hover">
    <div class="container-fluid">
        <a asp-action="Index" style="text-decoration: none; color: white">Home</a>
        @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>*@
        <div>
            <form class="d-flex" asp-action="SearchUsers" asp-controller="ApplicationUsers">
                <input name="searchString" type="text" class="form-control" />
                <button class="btn btn-outline-warning btn-event" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
<div >
    <h1 style="text-align:center; padding-top: 1rem; padding-bottom: 1rem">Clothing Enthusiasts</h1>
    <div class="container-fluid">     
        <table class="table" style="text-align: center">
            <thead>
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.FullName)*@
                        Name
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.LName)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileImageName)
                    </th>
                    <th>
                        Go to User Profile
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SearchResults)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.LName)
                        </td>*@

                        <td>
                            <p>
                                <img src="~/images/profileImages/@item.ProfileImageName" height="80" width="70" class="mr-3 rounded-circle img-thumbnail shadow-sm" />
                            </p>
                        </td>

                        <td>

                            <p>
                                <a asp-action="Details" asp-controller="ApplicationUsers" asp-route-id="@item.Id">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Details
                                    </button>
                                </a>
                            </p>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

