@model RefreshMyStyleApp.Models.Post

@{
    ViewData["Title"] = "NewPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light nav-hover">

        <div>
            <ul class="navbar-nav">
                <li class="nav-item" style="color: white">
                    <a class="nav-link" style="color: white" asp-action="Index">
                        Home
                    </a>
                </li>
            </ul>
        </div>
  
</nav>
<div class="container1">

    <h1>Create A New Post</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="NewPost" asp-controller="ApplicationUsers" method="post">
                <div class="form-group" style="padding-top: 1rem">
                    <p>Message</p>
                    <textarea asp-for="PostContent" placeholder="Make a request" class="form-control" maxlength="100"></textarea>
                    <span asp-validation-for="PostContent" class="text-danger"></span>
                </div>

                <div class="form-group" style="display: none">
                    <label asp-for="ApplicationUserId" class="control-label"></label>
                    <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                </div>
                <div class="form-group" style="padding-top: 1rem">
                    <input type="submit" value="Create" class="btn btn-outline-warning btn-event" />
                </div>

            </form>
        </div>
    </div>
</div>


