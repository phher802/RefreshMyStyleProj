@model RefreshMyStyleApp.ViewModels.ApplicationUserImageViewModel

@{
    ViewData["Title"] = "GetLikedAndClaimedItems";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light nav-hover">
    
        <div>
            <ul class="navbar-nav">
                <li class="nav-item" style="color: white">
                    <a class="nav-link" style="color: white" asp-action="Index">
                        Home
                    </a>
                </li>
            </ul>
        </div>
    
</nav>
<div class="container1">
    <h1 style="text-align: center">Items Claimed And Liked</h1>

    <div>
        <h3>Items Claimed</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date Claimed
                    </th>
                    <th>
                        Clothing Item
                    </th>
                    <th>
                        Claimer's Name
                    </th>
                    <th>
                        Actions
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model.Claims)
                {
                    <tr>

                        <td>
                            @claim.DateClaimed
                        </td>
                        <td>
                            <p>
                                <img src="~/images/items/@claim.ImageFilePath" height="100" width="80" />
                            </p>
                        </td>

                        <td>
                            @claim.ClaimedByName
                        </td>
                        <td>
                            <p>
                                <a asp-action="Details" asp-route-id="@claim.ClaimedById">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Details
                                    </button>
                                </a>
                            </p>

                            <p>
                                <a asp-action="DeleteClaimedImage" asp-controller="ApplicationUsers" asp-route-id="@claim.Id">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Delete
                                    </button>
                                </a>
                            </p>
                            <p>
                                <a asp-action="ConfirmClaim" asp-controller="ApplicationUsers" asp-route-id="@claim.ImageId">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Confirm
                                    </button>
                                </a>
                            </p>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    <div>
        <h3>Items Liked</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date Liked
                    </th>
                    <th>
                        Clothing Item
                    </th>
                    <th>
                        Liker's Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var like in Model.Likes)
                {
                    <tr>

                        <td>
                            @like.DateLiked
                        </td>
                        <td>
                            <p>
                                <img src="~/images/items/@like.ImageFilePath" height="100" width="80" />
                            </p>
                        </td>

                        <td>
                            @like.LikedByName
                        </td>
                        <td>
                            <p>
                                <a asp-action="Details" asp-route-id="@like.LikedById">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Details
                                    </button>
                                </a>
                            </p>

                            <p>
                                <a asp-action="DeleteClaimedImage" asp-controller="ApplicationUsers" asp-route-id="@like.Id">
                                    <button type="button" class="btn btn-outline-warning btn-event">
                                        Delete
                                    </button>
                                </a>
                            </p>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>