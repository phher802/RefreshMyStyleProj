@model RefreshMyStyleApp.Models.Image

@{
    ViewData["Title"] = "PostNewImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light nav-hover">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item" style="color: white">
                    <a class="nav-link" style="color: white" asp-action="Index">
                        Home
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container1">
    <h1>Upload A Clothing Item</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data" asp-controller="Images"
                  asp-action="PostNewImage">
                <div class="form-group">
                    <div class="col-md-10">

                        <input asp-for="ImageFile" type="file" name="files" accept="image/*" multiple />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Upload" class="btn btn-outline-warning btn-event" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
