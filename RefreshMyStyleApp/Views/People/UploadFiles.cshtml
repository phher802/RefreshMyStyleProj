@model RefreshMyStyleApp.Models.Person
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "UploadFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UploadFiles</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="People"
              asp-action="UploadFiles">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload pofile picture:</p>
                    <input asp-for="ProfileImage" type="file" name="files" accept="image/*" multiple />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

