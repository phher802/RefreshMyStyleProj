@model RefreshMyStyleApp.Models.Person

@{
    ViewData["Title"] = "UploadFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UploadFiles</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="People"
              asp-action="UploadFiles">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

