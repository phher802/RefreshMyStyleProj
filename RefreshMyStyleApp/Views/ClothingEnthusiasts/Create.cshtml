@model RefreshMyStyleApp.Models.ClothingEnthusiast

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ClothingEnthusiast</h4>
<h1>@ViewBag.Message</h1>
<h1>@ViewBag.ProfileImageTitle</h1>
<img src="@ViewBag.ProfileImageDataUrl" />

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label"></label>
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </form>
        <form asp-action="UploadProfileImage" asp-controller="ClothingEnthusiastsController" method="post"
              enctype="multipart/form-data">
            <input type="file" id="file1" name="file1" multiple="multiple" value="" />
            <button type="submit">Upload profile picture</button>
        </form>
        <form asp-action="RetrieveProfileImage" asp-controller="ClothingEnthusiastsController" method="post">
            <button type="submit">Show latest profile picture</button>
        </form>
        <form style="display: none">
            <div class="form-group">
                <label asp-for="IdentityUserId" class="control-label"></label>
                <select asp-for="IdentityUserId" class="form-control" asp-items="ViewBag.IdentityUserId"></select>
            </div>
            <div class="form-group">
                <input type="hidden" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
